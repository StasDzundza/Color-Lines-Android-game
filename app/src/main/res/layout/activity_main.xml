<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainMenuActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_background2"
        android:scaleType="centerCrop"
        android:contentDescription="@string/main_image"

        />

    <LinearLayout
        android:id="@+id/mainMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menuOptionsLayout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            tools:ignore="ExtraText">

            <Button
                android:id="@+id/newGameBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_game"
                android:layout_marginTop="100dp"
                android:textSize="25sp"
                android:background="@drawable/main_menu_play_button_style"
                android:onClick="onNewGamePressed"/>

            <Button
                android:id="@+id/quitGameBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quit_game"
                android:textSize="25sp"
                android:background="@drawable/main_menu_quit_btn_style"
                android:layout_marginTop="10dp"
                android:onClick="onQuitPressed"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>